#! /usr/bin/env python3

import re
import sys
import time
import signal
import logging
import argparse

parser = argparse.ArgumentParser(description='Monitor execution of an Ansible playbook')
parser.add_argument('-v', '--verbose', action='count', help='Enable debugging')
args = parser.parse_args()

logging.basicConfig(format='%(asctime)s %(levelname)s %(pathname)s:%(lineno)d %(msg)s')
log = logging.getLogger()
log.setLevel(logging.INFO - (args.verbose or 0)*10)

signal.signal(signal.SIGPIPE, lambda signum, stack_frame: exit(0))

if sys.stdin.isatty():
  parser.error('stdin must be redirected')

"""
TASK [ansible-firewall : Disable firewalld (for EL7 distros and greater)] ******
Wednesday 19 May 2021  14:39:10 -0400 (0:00:00.677)       0:04:09.406 *********
skipping: [aws-amazonlinux2]
skipping: [aws-debian10]
skipping: [aws-debian9]
skipping: [aws-ubuntu2004]
skipping: [aws-ubuntu1804]
skipping: [gcp-debian10]
skipping: [gcp-debian9]
skipping: [gcp-ubuntu1804]
skipping: [gcp-ubuntu2004]
ok: [aws-rhel8]
ok: [aws-centos8]
changed: [gcp-rhel8]
changed: [gcp-centos8]
"""

tasks = 0
pos = 0
last_task = None
hosts = set()
statuses = set()
task_regexp = re.compile('^(?:TASK|HANDLER) \[(.*)\] \*+$')
host_regexp = re.compile('^([a-z]+): \[([-a-zA-Z0-9]+)')

while True:
  line = sys.stdin.readline()
  if line:
    line = line.rstrip()
    pos += 1
    match = task_regexp.search(line)
    if match:
      task = match.group(1)
      log.debug(f'Line {pos}: Encountered task {task!r}')
      tasks += 1
      last_task = task
    else:
      match = host_regexp.search(line)
      if last_task and match:
        (status, host) = match.groups()
        log.debug(f'Line {pos}: host: {host} {status}')
        hosts.add(host)
        statuses.add(status)
  else:
    log.info('Tasks: {tasks}, Hosts: {hosts}, Last Task: {last_task!r}, Statuses: {statuses}'.format(
      tasks=tasks,
      hosts=len(hosts),
      last_task=last_task,
      statuses=statuses,
    ))
    time.sleep(15)
