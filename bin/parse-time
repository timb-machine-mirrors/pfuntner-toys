#! /usr/bin/env python3

import re
import sys
import signal
import logging
import argparse
import datetime

def date_time_zone(line):
  # 2025-01-02 08:48:28.369984272 -0500
  match = re.search(r'\b(\d{4}-\d{2}-\d{2} \d{2}:\d{2}:\d{2}\.\d{,6})\d*( [-+]\d{4})\b', line)
  if match:
    log.info(f'{line=} {match.groups()=}')
    timestamp = datetime.datetime.strptime(' '.join(match.groups()), '%Y-%m-%d %H:%M:%S.%f %z')
    return (f'{line[:match.start(0)]}{timestamp.isoformat()}{line[match.end(0):]}', True)
  else:
    log.info(f'date_time_zone() regexp does not match {line=}')
    return (line, False)

def seconds_since_epoch(line):
  # 1733755665.835
  match = re.search(r'\b(\d{10}(\.\d{3,})?)\b', line)
  if match:
    timestamp = datetime.datetime.fromtimestamp(float(match.group(1)))
    return (f'{line[:match.start(1)]}{timestamp.isoformat()}{line[match.end(1):]}', True)
  else:
    return (line, False)

parser = argparse.ArgumentParser(description='Replace timestamps with a standard ISO timestamp')
parser.add_argument('-v', '--verbose', action='count', help='Enable debugging')
args = parser.parse_args()

logging.basicConfig(format='%(asctime)s %(levelname)s %(pathname)s:%(lineno)d %(msg)s')
log = logging.getLogger(sys.argv[0])
log.setLevel(logging.WARNING - (args.verbose or 0)*10)

signal.signal(signal.SIGPIPE, lambda signum, stack_frame: exit(0))

parsers = [
  date_time_zone,
  seconds_since_epoch,
]

if sys.stdin.isatty():
  parser.error('stdin must be redirected')

for line in sys.stdin.read().splitlines():
  for parser in parsers:
    (line, changed) = parser(line)
    if changed:
      break
  print(line)
