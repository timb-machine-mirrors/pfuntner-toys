#! /usr/bin/env python

import os
import sys
import os.path

all = False
hits = 0

def protect(s):
  if ' ' in s:
    s = '\'{}\''.format(s)
  return s

def process(path):
  global hits

  ret = False

  path = path % os.environ
  if os.path.isfile(path):
    if all:
      print "You%s have %s" % (" also" if hits else "", protect(path))
    else:
      print protect(path)
      ret = True
    hits += 1
  elif all:
    print "You do not have %s" % protect(path)

  return ret

#  ~/.bash_profile, ~/.bash_login, and ~/.profile,

if ("-h" in sys.argv) or ("-?" in sys.argv) or ("--help" in sys.argv):
  sys.stderr.write("Syntax: %s [--all]\n" % sys.argv[0])
  exit(1)

all = ("-a" in sys.argv) or ("--all" in sys.argv)

if not process("%(HOME)s/.bash_profile"):
  if not process("%(HOME)s/.bash_login"):
    process("%(HOME)s/.profile")
