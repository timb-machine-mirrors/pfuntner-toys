#! /usr/bin/env python3

import time
import signal
import logging
import argparse
import datetime

parser = argparse.ArgumentParser(description='Print time periodically')
parser.add_argument('-i', '--interval', type=float, default=15, help='Specifiy interval between printing in minutes (default: 60)')
parser.add_argument('-v', '--verbose', action='count', help='Enable debugging')
args = parser.parse_args()

logging.basicConfig(format='%(asctime)s %(levelname)s %(pathname)s:%(lineno)d %(msg)s')
log = logging.getLogger()
# log.setLevel(logging.DEBUG if args.verbose else logging.WARNING)
log.setLevel(logging.WARNING - (args.verbose or 0)*10)

signal.signal(signal.SIGPIPE, lambda signum, stack_frame: exit(0))

start = datetime.datetime.now()

iteration = 0
while True:
  iteration += 1
  now = datetime.datetime.now()
  now_formatted = now.strftime("%a %Y-%m-%d %H:%M:%S.%f")
  print(f'\r{iteration:6}: {now_formatted} {now-start!s}', end='')
  time.sleep(args.interval*60)
