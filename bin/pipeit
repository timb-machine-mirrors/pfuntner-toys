#! /usr/bin/env python3

import sys
import base64
import signal
import logging
import argparse

import bruno_tools

parser = argparse.ArgumentParser(description='Send data from pipe to file on a remote system')
parser.add_argument('dest', help='Destination in form `system:path`')
parser.add_argument('-v', '--verbose', action='count', help='Enable debugging')
args = parser.parse_args()

logging.basicConfig(format='%(asctime)s %(levelname)s %(pathname)s:%(lineno)d %(msg)s')
log = logging.getLogger(sys.argv[0])
log.setLevel(logging.WARNING - (args.verbose or 0)*10)

signal.signal(signal.SIGPIPE, lambda signum, stack_frame: exit(0))

if sys.stdin.isatty():
  parser.error('stdin must be redirected')

tokens = args.dest.split(':')
if len(tokens) == 2:
  (target, path) = tokens
  (rc, stdout, stderr) = bruno_tools.run(['ssh', target, 'base64', '-d', '>', path], stdin=base64.b64encode(sys.stdin.read().encode()).decode(), log=log, capture=False)
  exit(rc)
else:
  parser.error('Use `system:path` to specify destination')
