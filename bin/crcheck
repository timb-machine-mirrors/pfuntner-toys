#! /usr/bin/env python

"""
  Check for those ugly Windoze-style carriage returns in
  a file.
"""

import sys
import string

def process(filename=None):
  if filename:
    stream = open(filename, "r")
  else:
    stream = sys.stdin

  last = None
  lfs = 0
  crs = 0
  total = 0
  printable = 0
  eof = False
  while not eof:
    c = stream.read(1)
    if not len(c):
      eof = True
    else:
      total += 1
      if c in string.printable:
        printable += 1
      if c == "\n":
        lfs += 1
        if last == "\r":
          crs += 1
      last = c

  if printable != total:
    sys.stdout.write("b ")
  elif crs:
    if crs == lfs:
      sys.stdout.write("w ")
    else:
      sys.stdout.write("* ")
  else:
    sys.stdout.write("u ")

  if filename:
    stream.close()
    sys.stdout.write("%s: " % filename)

  sys.stdout.write("crs=%d, lfs=%d, %d chars" % (crs, lfs, total))
  if total:
    sys.stdout.write(", %.2f%% printable" % ((printable*100.0)/total))

  print ""

if len(sys.argv) > 1:
  count = 0
  for filename in sys.argv[1:]:
    count += 1
    process(filename)
else:
  assert not sys.stdin.isatty(), "stdin must be redirected if no files are specified"
  process()
