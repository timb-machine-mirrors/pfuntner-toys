#! /usr/bin/env python

import sys
import getopt

def process(filename=None):
  if filename:
    f = open(filename, 'r')
  else:
    f = sys.stdin

  data = f.read()
  msg = []

  if all or chars:
    msg.append("%32d" % len(data))

  if all or words:
    msg.append("%16d" % len(data.split()))

  if all or lines:
    msg.append("%16d" % len(data.strip('\n').split('\n')))

  msg.append(filename if filename else '-')

  print ' '.join(msg)

  if filename:
    f.close()

all = True
chars = False
words = False
lines = False

(opts,args) = getopt.getopt(sys.argv[1:], "cwl", ["characters", "bytes", "words", "lines"])
for (opt,arg) in opts:
  if opt in ["-c", "--characters", "--bytes"]:
    if all:
      all = False
      chars = True
    else:
      chars = not chars
  elif opt in ["-w", "--words"]:
    if all:
      all = False
      words = True
    else:
      words = not words
  elif opt in ["-l", "--lines"]:
    if all:
      all = False
      lines = True
    else:
      lines = not lines
  else:
    assert False, "don't know how to handle %s" % repr(opt)

assert all or chars or words or lines

if args:
  for filename in args:
    process(filename)
else:
  assert not sys.stdin.isatty(), "stdin must be redirected if no files are specified"
  process()
